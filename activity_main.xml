<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/bankNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank Name:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bankNameLabel"
        android:layout_marginStart="20dp"
        android:text="ABC Bank"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/accountNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Number:"
        android:layout_below="@id/bankName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountNumberLabel"
        android:layout_marginStart="20dp"
        android:text="1234567890"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/accountHolderNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Holder Name:"
        android:layout_below="@id/accountNumber"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/accountHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountHolderNameLabel"
        android:layout_marginStart="20dp"
        android:text="John Doe"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/balanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:"
        android:layout_below="@id/accountHolderName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balanceLabel"
        android:layout_marginStart="20dp"
        android:text="$1000.00"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/adsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Ads"
        android:layout_below="@id/balance"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
